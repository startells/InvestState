<Window x:Class="InvestInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:InvestInfo.ViewModel"
        xmlns:Menu="clr-namespace:InvestInfo.Utilities"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="850"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">

    <Window.DataContext>
        <vm:NavigationVM/>
    </Window.DataContext>
    
    <Grid>

        <!--// TODO: window border //-->

        <Border Background="#212529"
                CornerRadius="20"/>

        <Grid>
            
            <!--// Base Grid //-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="630"/>
            </Grid.ColumnDefinitions>
            
            <!--// Navigation Panel //-->

            <Grid HorizontalAlignment="Left"
                  Width="220">

                <Border Background="#272B2F"
                        CornerRadius="20,0,0,20"/>

                <StackPanel Height="400"
                            Width="228">
                    
                    <!--// Home //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding HomeCommand}"
                              IsChecked="True">

                        <Grid>

                            <Image Source="/Images/HomeImage.png"
                                   Style="{StaticResource Image_Style}"/>

                            <TextBlock Text="Главная"
                                       Style="{StaticResource Text_Style}"/>

                        </Grid>
                        
                    </Menu:Btn>
                    
                    <!--// Operations  //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding OperationsCommand}"
                              IsChecked="True">

                        <Grid>

                            <Image Source="/Images/OperationsImage.png"
                                   Style="{StaticResource Image_Style}"/>

                            <TextBlock Text="Операции"
                                   Style="{StaticResource Text_Style}"/>

                        </Grid>

                    </Menu:Btn>

                </StackPanel>

            </Grid>

            <Grid Grid.Column="1">
                <ContentControl x:Name="Pages"
                                Content="{Binding CurrentView}"/>
            </Grid>
            
        </Grid>

        <Button x:Name="CloseApp"
                Style="{StaticResource ExitApp}"
                Command="{Binding CloseApp}"/>

    </Grid>
</Window>
