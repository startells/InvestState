<UserControl x:Class="InvestInfo.Views.OperationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InvestInfo.Views" xmlns:viewmodels="clr-namespace:InvestInfo.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:OperationsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FAF3E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" ItemsSource="{Binding Operations}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Date, StringFormat=dd.MM.yy HH:mm}"
                           Margin="0,0,12,0"
                           Foreground="#555"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Ticker}" 
                               FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="{Binding Type}" 
                               FontSize="12" Foreground="#666"
                               Margin="0,2,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                           Text="{Binding Amount, StringFormat=N2}"
                           FontWeight="Bold"
                           Foreground="Aqua"
                           MinWidth="90" TextAlignment="Right"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>