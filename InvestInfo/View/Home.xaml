<UserControl x:Class="InvestInfo.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Style="{StaticResource Page_Style}">

    <Grid Margin="20">
        <Border Background="#2B2B2B" CornerRadius="12" Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >

                <TextBlock Text="Портфель" 
                           FontSize="28"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="{Binding PortfolioSum, StringFormat={}{0:C}}"
                           FontSize="48"
                           Foreground="#4CAF50"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
